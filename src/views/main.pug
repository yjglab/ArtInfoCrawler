extends layout
include mixins/mainSectionCard

block links
    link(rel="stylesheet", href="/static/css/main.css")
    
block content
    .filter-container
        - for (let exb of allExbs) {
            if exb.category === "Museum"
                .mix.museum(class=`${(exb.country).split(' ').join('')}`)
                    +mainSectionCard(exb)
            else if exb.category === "Gallery"
                .mix.gallery(class=`${(exb.country).split(' ').join('')}`)
                    +mainSectionCard(exb)
        - }

block scripts
    script(src="/static/js/main.js")
   
        