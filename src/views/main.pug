extends layout
include mixins/mainCard

block links
    link(rel="stylesheet", href="/static/css/main.css")
    
block content
    .update-info-container 
        .update-spinner 
            i.fa-solid.fa-circle-notch
        .update-infos
            h1 
            h1 
            h1
    .main-section-container
        .main-banner-section-container
            
            .main-banner-slider
                .main-banner-1.main-banner(style=`background: url(${allExbs[0].thumbnailSrc}) no-repeat; background-size:cover`)
                    .banner-detail-filter
                    .banner-detail
                        h1=allExbs[10].title
                        p=`${allExbs[10].date} in ${allExbs[10].country}`
                    
                .main-banner-2.main-banner(style=`background: url(${allExbs[1].thumbnailSrc}) no-repeat; background-size:cover`)
                    .banner-detail-filter
                    .banner-detail
                        h1=allExbs[20].title
                        p=`${allExbs[20].date} in ${allExbs[20].country}`
                        
                .main-banner-3.main-banner(style=`background: url(${allExbs[2].thumbnailSrc}) no-repeat; background-size:cover`)
                    .banner-detail-filter
                    .banner-detail
                        h1=allExbs[30].title
                        p=`${allExbs[30].date} in ${allExbs[30].country}`
                    
                .main-banner-4.main-banner(style=`background: url(${allExbs[3].thumbnailSrc}) no-repeat; background-size:cover`)
                    .banner-detail-filter
                    .banner-detail
                        h1=allExbs[40].title
                        p=`${allExbs[40].date} in ${allExbs[40].country}`
                    
                .main-banner-5.main-banner(style=`background: url(${allExbs[4].thumbnailSrc}) no-repeat; background-size:cover`)
                    .banner-detail-filter
                    .banner-detail
                        h1=allExbs[50].title
                        p=`${allExbs[50].date} in ${allExbs[50].country}`
                        
            svg.prev(xmlns="http://www.w3.org/2000/svg", width="56.898", height="91", viewBox="0 0 56.898 91")
                path(d="M45.5,0,91,56.9,48.452,24.068,0,56.9Z", transform="translate(0 91) rotate(-90)", fill="#fff")
            svg.next(xmlns="http://www.w3.org/2000/svg", width="56.898", height="91", viewBox="0 0 56.898 91")
                path(d="M45.5,0,91,56.9,48.452,24.068,0,56.9Z", transform="translate(56.898) rotate(90)", fill="#fff")
            .main-banner-trailer
                .trail-box1.active
                .trail-box2
                .trail-box3 
                .trail-box4 
                .trail-box5
                
        .main-card-section-container
            .main-card-mix-container
                - for (let exb of allExbs) {
                    if exb.category === "Museum"
                        .mix.filter-museum(class=`${(exb.country).split(' ').join('')}`)
                            +mainCard(exb, exb.category)
                    else if exb.category === "Gallery"
                        .mix.filter-gallery(class=`${(exb.country).split(' ').join('')}`)
                            +mainCard(exb, exb.category)
                    //- - break
                - }
        .main-card-info-floater
            .floater-img
                img(src="")
            .floater-info
                .floater-subtitle
                    .floater-subtitle-col.col1
                        h1
                    .floater-subtitle-col.col2
                        h1
                    .floater-subtitle-col.col3
                        h1
                .floater-title
                    h1
block scripts
    script(src="/static/js/main.js")
   
        