mixin mainCard(exbInfo, exbCategory)
    .main-card-detail-background
    .main-card-container.hoverable
        .main-card
            .main-card-category-icon
                if exbCategory === "Museum"
                    i.fa-solid.fa-building-columns
                else if exbCategory === "Gallery"
                    i.fa-solid.fa-palette
            .main-card-country-icon 
                img(width="50" height="100" src=`https://hatscripts.github.io/circle-flags/flags/${exbInfo.countryCode}.svg` )
            .main-card-image 
                img.card-image(loading="lazy" width="100" height="100" src=`${exbInfo.thumbnailSrc}`)
            .main-card-extra-btn
                i.fa-solid.fa-xmark
      
        .main-card-detail-container
            .detail-info-title 
                h1=exbInfo.title
                
            .detail-info-rest
                .detail-info-left
                    .detail-info-detail
                        p=exbInfo.detail
                .detail-info-right 
                    .detail-info-hall
                        .icon-box
                            i.fa-solid.fa-landmark-dome
                        h1=exbInfo.hall
                    .detail-info-date
                        .icon-box
                            i.fa-solid.fa-calendar-days
                        h1=exbInfo.date
                    .detail-info-category
                        .icon-box
                            if exbCategory === "Museum"
                                i.fa-solid.fa-building-columns
                            else if exbCategory === "Gallery"
                                i.fa-solid.fa-palette
                        h1=exbInfo.category
                    .detail-info-link 
                        .icon-box 
                            i.fa-solid.fa-arrow-up-right-from-square
                        a(href=`${exbInfo.link}` target="blank") 
                           
                            
                    .detail-info-country
                        img(src=`https://hatscripts.github.io/circle-flags/flags/${exbInfo.countryCode}.svg` width=48)
                    
                    
            //- 데이터만 저장
        .main-card-info 
            .info-title=exbInfo.title
            .info-date=exbInfo.date
            .info-hall=exbInfo.hall
            .info-country=exbInfo.country
            .info-category=exbCategory
            .info-imgSrc=exbInfo.thumbnailSrc
